{
  "compilerOptions": {
    "lib": ["es2023", "dom"],
    "module": "nodenext",
    "target": "es2022",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "verbatimModuleSyntax": true,
    "rewriteRelativeImportExtensions": true
  }
}