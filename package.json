  "scripts": {
    "solidity": "hardhat compile;",
    "noir:compile": "cd circuits/privateTransfer; nargo compile;",
    "noir:vk": "cd circuits/privateTransfer; bb write_vk -b ./target/private_transfer.json -o ./target --oracle_hash keccak;",
    "noir:verifier": "cd circuits/privateTransfer; bb write_solidity_verifier -k ./target/vk -o ./target/Verifier.sol;",
    "noir:cp-verifier": "cp circuits/privateTransfer/target/Verifier.sol contracts/PrivateTransferVerifier.sol;",
    "noir:rename-verifier": "yarn tsx scripts/replaceLine.ts --file contracts/PrivateTransferVerifier.sol --remove \"contract HonkVerifier is BaseZKHonkVerifier(N, LOG_N, VK_HASH, NUMBER_OF_PUBLIC_INPUTS) {\" --replace \"contract PrivateTransferVerifier is BaseZKHonkVerifier(N, LOG_N, VK_HASH, NUMBER_OF_PUBLIC_INPUTS) {\"",
    "noir": "yarn noir:compile; yarn noir:vk; yarn noir:verifier; yarn noir:cp-verifier; yarn noir:rename-verifier",
    "dev": "cd website; yarn vite",
    "build": "cd website; yarn vite build",
    "preview": "cd website; yarn vite preview",
    "install-vite": "cd website; yarn install"
  },
  "dependencies": {
    "@aztec/aztec.js": "^2.0.3",
    "@aztec/bb.js": "1.2.0",
